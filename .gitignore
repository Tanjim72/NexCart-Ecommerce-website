# ============================================
# Sector 3: Order & Payment System - .gitignore
# ============================================
# Files and folders that should NOT be committed to Git

# ============================================
# CONFIGURATION & CREDENTIALS
# ============================================
config.php                          # Database configuration with credentials
.env                                # Environment variables
.env.local                          # Local environment overrides
.env.*.local                        # Local environment overrides

# ============================================
# GENERATED FILES & LOGS
# ============================================
*.log                               # Log files
logs/                               # Log directory
*.tmp                               # Temporary files
temp/                               # Temporary directory
cache/                              # Cache files
*.cache                             # Cache files

# ============================================
# UPLOADS & USER-GENERATED CONTENT
# ============================================
uploads/                            # User uploaded files
invoices/                           # Generated PDF invoices
receipts/                           # Generated receipts
exports/                            # Exported data

# ============================================
# VENDOR & DEPENDENCIES
# ============================================
vendor/                             # Composer dependencies
node_modules/                       # NPM dependencies
composer.lock                       # Composer lock file (optional, team-dependent)
package-lock.json                   # NPM lock file

# ============================================
# IDE & EDITOR FILES
# ============================================
.vscode/                            # VS Code settings
.idea/                              # JetBrains IDEs
*.sublime-project                   # Sublime Text project
*.sublime-workspace                 # Sublime Text workspace
.netbeans/                          # NetBeans
.project                            # Eclipse project
.classpath                          # Eclipse classpath
*.swp                               # Vim swap files
*.swo                               # Vim swap files
*~                                  # Backup files

# ============================================
# OPERATING SYSTEM FILES
# ============================================
.DS_Store                           # macOS system file
Thumbs.db                           # Windows thumbnail cache
Desktop.ini                         # Windows folder settings
.Spotlight-V100                     # macOS spotlight
.Trashes                            # macOS trash
ehthumbs.db                         # Windows image cache

# ============================================
# DEVELOPMENT & BUILD FILES
# ============================================
.git/                               # Git repository
.gitignore                          # This file itself (usually not needed)
dist/                               # Distribution build
build/                              # Build directory
*.min.js                            # Minified JS (if generated)
*.min.css                           # Minified CSS (if generated)
.env.example                        # Example only (track this separately if needed)

# ============================================
# DATABASE FILES
# ============================================
*.sql.bak                           # SQL backup files
*.sqlite                            # SQLite databases
*.sqlite3                           # SQLite databases
*.db                                # Database files

# ============================================
# OS SPECIFIC
# ============================================
.AppleDouble
.LSOverride
._*
.apdisk
NTUSER.DAT
ntuser.dat.LOG1
ntuser.dat.LOG2

# ============================================
# TESTING & COVERAGE
# ============================================
coverage/                           # Code coverage reports
.phpunit.result.cache               # PHPUnit cache
test-results/                       # Test results

# ============================================
# SECTOR 3 SPECIFIC
# ============================================
# Generated invoices and receipts
public/invoices/*.pdf               # Generated PDF invoices
public/receipts/*.pdf               # Generated receipts

# Temporary order processing files
public/temp-orders/                 # Temporary order files

# Payment gateway responses (sensitive)
payment-logs/                       # Payment processing logs
